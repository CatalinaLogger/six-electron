// el-scroll 样式
.scrollbar-wrapper
  overflow-x hidden !important

// to reset element-ui default css
.el-upload
  input[type="file"]
    display none !important

.el-upload__input
  display none

// 使弹窗居中显示
.el-dialog__wrapper
  display flex
  justify-content center
  align-items Center
  &.tips-dialog
    .el-dialog__header
      background #fff !important
    .el-dialog__body
      display flex
      align-items center
      padding 0 20px 20px !important
      i
        font-size 40px
        color #E6A23C
      .message
        padding-left 20px
  // 暂时性解决diolag 问题 https://github.com/ElemeFE/element/issues/2461
  .el-dialog
    position relative
    left 0
    margin 0 auto
    transform none
    .el-dialog__header
      padding 0 10px
      height 40px
      background #409eff
      .el-dialog__title
        color white
        font-size 16px
        line-height 40px
      .el-dialog__headerbtn
        top 8px
        right 10px
        .el-dialog__close
          color white
          font-size 22px
          transition all .2s ease
          &:hover
            transform rotate(90deg)
    .el-dialog__body
      padding 20px 20px 0 20px
    .el-dialog__footer
      padding 0 20px 10px 20px
.none-padding
  .el-dialog__body
    padding 0 !important

//element ui upload
.upload-container
  .el-upload
    width 100%
    .el-upload-dragger
      width 100%
      height 200px


.six-table
  position relative
  &.flex-table
    .el-table
      position absolute
  .has-gutter
    tr, th
      height 40px
      color white
      font-size 14px
      font-weight normal !important
      background #409eff !important
      border none
  tr
    background linear-gradient(90deg, #fff, #eee)
  td
    border-bottom none
  .el-table--striped .el-table__body tr.el-table__row--striped td
    background white
  .el-table--enable-row-hover .el-table__body tr:hover>td
    background #d7eaff
  .el-table--small td, .el-table--small th
    padding 6px 0

.operate
  .el-button--mini
    padding 7px

// 自定义树菜单样式
.six-tree
  font-size 14px
  .el-tree-node__content
    height 40px
    &:hover
      background #d7eaff
    .el-tree-node__expand-icon
      font-size 16px
  .el-tree--highlight-current .el-tree-node.is-current>.el-tree-node__content
    background-color #409eff
    .custom-tree-node
      color white
    >.el-tree-node__label
      color white

// 自定义表格样式
.six-row
  display flex
  align-items center
  justify-content space-around
  height 40px
  font-size 14px
  &.active
    color #409eff
    background #d7eaff !important
  &.title
    color white
    background #409eff !important
  &:hover
    background #d7eaff
  &:nth-child(even)
    background linear-gradient(90deg, #fff, #eee)
    &:hover
      background #d7eaff
  div
    flex 1
    text-align center
    white-space nowrap
    text-overflow ellipsis
    overflow hidden