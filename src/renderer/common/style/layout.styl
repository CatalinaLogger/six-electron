$sideBg = #304156
$menuBg = #1f2d3d
$HoverBg = #001528

.app-window
  position relative
  height 100vh
  background white
  .side-bar
    position absolute
    width 180px
    height 100vh
    background $sideBg
    transition width .3s
    //reset element-ui css
    .horizontal-collapse-transition
      transition: 0s width ease-in-out, 0s padding-left ease-in-out, 0s padding-right ease-in-out;
    .el-submenu
      .el-menu-item
        min-width 180px !important
        background-color $menuBg !important
        &:hover
          background-color $HoverBg !important
    .el-menu
      border none
    .svg-icon
      margin-right 10px
  .app-body
    margin-left 180px
    transition margin-left 0.3s
    .head-bar
      display flex
      .collapse
        padding 8px 0 0 10px
        .svg-icon
          cursor pointer
          font-size 24px
          transform rotate(90deg)
          transition .3s
          transform-origin 50% 50%
          &.icon-opened
            transform rotate(0deg)
      .tool-bar
        flex-grow 1
      .avatar
        position relative
        width 40px
        height 40px
        margin-right 10px
        overflow hidden
        img
          width 100%
          height 100%
      .change, .hidden, .closed
        margin 5px 0
        width 30px
        height 30px
        text-align center
        font-size 20px
        line-height 30px
        color #606266
        &:hover
          color #409eff
        .svg-icon
          margin-bottom 3px
          width 16px
          height 16px
      .closed
        margin-right 10px
    .app-main
      position relative
      height calc(100vh - 40px)

  &.side-closed
    .side-bar
      width 64px
      .svg-icon
        font-size 23px
      .no-drop-down
        span
          opacity 0
          visibility hidden
      .el-submenu
        .el-submenu__title
          span
            opacity 0
            visibility hidden
          .el-submenu__icon-arrow
            display none
        .el-menu-item
          .svg-icon, span
            display none
    .app-body
      margin-left 64px

.leaflet-control-container
  display none
